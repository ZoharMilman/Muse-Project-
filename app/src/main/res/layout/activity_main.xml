<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="16dp">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<Spinner
			android:id="@+id/muses_spinner"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginBottom="8dp">
			<Button
				android:id="@+id/refresh"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/refresh"
				android:layout_marginEnd="4dp"/>
			<Button
				android:id="@+id/connect"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/connect"
				android:layout_marginEnd="4dp"/>
			<Button
				android:id="@+id/disconnect"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/disconnect"/>
		</LinearLayout>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:text="@string/status"
			android:paddingBottom="4dp"/>
		<TextView
			android:id="@+id/con_status"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:text="@string/undefined"
			android:paddingBottom="8dp"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:text="Headset is on"
			android:paddingBottom="4dp"/>
		<TextView
			android:id="@+id/on_status"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:text="@string/undefined"
			android:paddingBottom="8dp"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:text="Blink event occurred"
			android:paddingBottom="4dp"/>
		<TextView
			android:id="@+id/blink_status"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:text="@string/undefined"
			android:paddingBottom="8dp"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:text="Jaw clench event occurred"
			android:paddingBottom="4dp"/>
		<TextView
			android:id="@+id/jaw_clench_status"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:text="@string/undefined"
			android:paddingBottom="8dp"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:text="@string/eeg"
			android:paddingBottom="4dp"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginBottom="8dp">
			<TextView
				android:id="@+id/eeg_tp9"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="16sp"
				android:text="@string/init_val"
				android:gravity="center"/>
			<TextView
				android:id="@+id/eeg_af7"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="16sp"
				android:text="@string/init_val"
				android:gravity="center"/>
			<TextView
				android:id="@+id/eeg_af8"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="16sp"
				android:text="@string/init_val"
				android:gravity="center"/>
			<TextView
				android:id="@+id/eeg_tp10"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="16sp"
				android:text="@string/init_val"
				android:gravity="center"/>
		</LinearLayout>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:text="@string/accel"
			android:paddingBottom="4dp"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginBottom="8dp">
			<TextView
				android:id="@+id/acc_x"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="16sp"
				android:text="@string/init_val"
				android:gravity="center"/>
			<TextView
				android:id="@+id/acc_y"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="16sp"
				android:text="@string/init_val"
				android:gravity="center"/>
			<TextView
				android:id="@+id/acc_z"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="16sp"
				android:text="@string/init_val"
				android:gravity="center"/>
		</LinearLayout>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:text="@string/muse_elem"
			android:paddingBottom="4dp"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginBottom="8dp">
			<TextView
				android:id="@+id/elem1"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="16sp"
				android:text="@string/init_val"
				android:gravity="center"/>
			<TextView
				android:id="@+id/elem2"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="16sp"
				android:text="@string/init_val"
				android:gravity="center"/>
			<TextView
				android:id="@+id/elem3"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="16sp"
				android:text="@string/init_val"
				android:gravity="center"/>
			<TextView
				android:id="@+id/elem4"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="16sp"
				android:text="@string/init_val"
				android:gravity="center"/>
		</LinearLayout>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:text="@string/version"
			android:paddingBottom="4dp"/>
		<TextView
			android:id="@+id/version"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="16sp"
			android:text="No muse connected yet!"
			android:paddingBottom="8dp"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:text="Gyro"
			android:paddingBottom="4dp"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginBottom="8dp">
			<TextView
				android:id="@+id/gyro_x"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="16sp"
				android:text="@string/init_val"
				android:gravity="center"/>
			<TextView
				android:id="@+id/gyro_y"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="16sp"
				android:text="@string/init_val"
				android:gravity="center"/>
			<TextView
				android:id="@+id/gyro_z"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="16sp"
				android:text="@string/init_val"
				android:gravity="center"/>
		</LinearLayout>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:text="Gyro Toggle X"
			android:paddingBottom="4dp"/>
		<TextView
			android:id="@+id/gyro_toggle_x"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="16sp"
			android:text="@string/init_val"
			android:paddingBottom="8dp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<Button
				android:id="@+id/pause"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/pause"
				android:layout_gravity="center_horizontal"/>
		</LinearLayout>
	</LinearLayout>
</ScrollView>
